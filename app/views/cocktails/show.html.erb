<div class="container">
  <div class="card border border-primary rounded bg-info" style="width: 18rem">
    <!-- <img class="card-img-top" src="..." alt="Card image cap" /> -->
    <div class="card-body">
      <h2 class="text-primary"><%= @cocktail.name %></h2>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> : <%= dose.ingredient.name %></li>
        <% end %>
      </ul>
      <%= link_to 'Edit', edit_cocktail_path(@cocktail) %> <%= link_to 'Delete',
      @cocktail, method: :delete, data: { confirm: "Are you sure" } %>
    </div>
  </div>
</div>
